TS_TOPDIR="${0%/*}/../.."
TS_DESC="mmap'ed AF_PACKET socket"

. $TS_TOPDIR/functions.sh
ts_init "$*"
ts_skip_nonroot

. "$TS_SELF/lsfd-functions.bash"

ts_check_test_command "$TS_CMD_LSFD"

ts_check_test_command "$TS_HELPER_MKFDS"

ts_cd "$TS_OUTDIR"

PID=
FD=3
EXPR=
INTERFACE=lo

{
    coproc MKFDS { "$TS_HELPER_MKFDS" mapped-packet-socket $FD interface=${INTERFACE}; }
    if read -u ${MKFDS[0]} PID; then
	EXPR='(ASSOC == "shm") and (STTYPE == "SOCK") and (MODE == "-w-")'
	${TS_CMD_LSFD} -p "$PID" -n -o SOCK.PROTONAME -Q "${EXPR}"
	echo 'SOCK.PROTONAME': $?
	kill -CONT ${PID}
    fi

    wait ${MKFDS_PID}
    if [[ $? == "$UNSUPPORTED" ]]; then
	ts_skip "packet socket doesn't support attaching a buffer"
    fi
} > $TS_OUTPUT 2>&1

ts_finalize

#, no-wrap
msgid ""
"*col*(1),\n"
"*more*(1),\n"
"*nroff*(1),\n"
"*troff*(1),\n"
"*ul*(1)\n"
msgstr ""
"*col*(1),\n"
"*more*(1),\n"

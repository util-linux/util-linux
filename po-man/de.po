msgstr "*ubiX_Y*"

#. type: Plain text
#: ../sys-utils/mount.8.adoc:1284
msgid "UBI device number *X*, volume number *Y*"
msgstr "UBI-Gerätenummer *0*, Datenträgernummer *Y*"

#. type: Labeled list
#: ../sys-utils/mount.8.adoc:1284
#, no-wrap
msgid "*ubiY*"
msgstr "*ubiY*"

#. type: Plain text
#: ../sys-utils/mount.8.adoc:1286
msgid "UBI device number *0*, volume number *Y*"
msgstr "UBI-Gerätenummer *0*, Datenträgernummer *Y*"


#. type: Plain text
#: ../misc-utils/cal.1.adoc:50
msgid "cal - display a calendar"
msgstr "cal - вивести календар"

#. type: Plain text
#: ../misc-utils/cal.1.adoc:54
#, fuzzy
#| msgid "*cal* [options] [[[_day_] _month_] _year_]\n"
msgid "*cal* [options] [[[_day_] _month_] _year_]"

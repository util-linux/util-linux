#, no-wrap
msgid "*0x00000001*"
msgstr "*0x00000001*"

#. type: Plain text
#: ../schedutils/taskset.1.adoc:51
msgid "is processor #0,"
msgstr "це процесор із номером 0,"

#. type: Labeled list

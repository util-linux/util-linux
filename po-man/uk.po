msgid "*-P*, *--persistent*"
msgstr "*-z*, *--print0*"

#. type: Plain text
#: ../sys-utils/lsns.8.adoc:54
msgid ""
"Display only the namespaces without processes (aka persistent namespaces), "
"created by bind mounting /proc/pid/ns/type files to a filesystem path."
msgstr ""

#. type: Labeled list

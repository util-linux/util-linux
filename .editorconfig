[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.[ch]]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.sym]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.sh]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true
insert_final_newline = true

[meson.build]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
